---
	import FooterA from '../atoms/FooterA.astro';

	const { alt = '', link = '', text = '', image = '' } = Astro.props;
---

<li>
	{!!link && (
		<a href={link}>
			<div class="imageContainer">
				<img src={image} {alt} />
			</div>

			<FooterA>{text}</FooterA>
		</a>
	)}

	{!link && (
		<div class="flex">
			<div class="imageContainer">
				<div style="display: flex;">
					<img src={image} {alt} />
				</div>
			</div>

			<div>{text}</div>
		</div>
	)}
</li>

<style>
	li {
		padding: 10px 0;
		list-style: none;
	}
	a,
	.flex {
		color: white;
		display: flex;
		flex-flow: start;
		align-items: center;
		text-decoration: none;
	}
	.imageContainer {
		width: 24px;
		margin-right: 20px;
	}
</style>
